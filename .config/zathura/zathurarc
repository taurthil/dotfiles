#set font "monospace normal 16"


# settings
set selection-clipboard clipboard
set show-scrollbars True
# key bindings

map [normal]     <A-1> set "first-page-column 1"
map [fullscreen] <A-1> set "first-page-column 1"
map [normal]     <A-2> set "first-page-column 2"
map [fullscreen] <A-2> set "first-page-column 2"

map [normal]     <C-Up>    scroll half-up
map [fullscreen] <C-Up>    scroll half-up
map [normal]     <C-Down>  scroll half-down
map [fullscreen] <C-Down>  scroll half-down
map [normal]     <C-Left>  scroll half-left
map [fullscreen] <C-Left>  scroll half-left
map [normal]     <C-Right> scroll half-right
map [fullscreen] <C-Right> scroll half-right

map [normal]     <C-k>    scroll half-up
map [fullscreen] <C-k>    scroll half-up
map [normal]     <C-j>  scroll half-down
map [fullscreen] <C-j>  scroll half-down
map [normal]     <C-h>  scroll half-left
map [fullscreen] <C-h>  scroll half-left
map [normal]     <C-l> scroll half-right
map [fullscreen] <C-l> scroll half-right


# Why are these only defined for normal mode by default?
map [fullscreen] a adjust_window best-fit
map [fullscreen] s adjust_window width
map [fullscreen] f follow
map [fullscreen] d toggle_page_mode 2
map [fullscreen] <Tab> toggle_index

map [index] q quit